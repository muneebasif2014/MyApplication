<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="15dp"
        android:background="@drawable/download">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/imageView_casee"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:foregroundGravity="center"
            android:src="@drawable/user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/casee_status_sch"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/imageView_casee"
            android:text="casee status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clinte_name_schsing"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/casee_status_sch"

            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView_casee"
            android:text="clinte name"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/casee_number_schsing"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/clinte_name_schsing"
            android:layout_marginLeft="5dp"

            android:layout_toRightOf="@id/imageView_casee"
            android:text="casee number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/casee_name_schsing"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/casee_number_schsing"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView_casee"
            android:text="casee name"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/casee_data_schsing"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/casee_name_schsing"
            android:layout_toRightOf="@id/imageView_casee"
            android:layout_marginLeft="5dp"

            android:text="casee date"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/remarks_casee_layout_sch"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/casee_data_schsing"
            android:layout_toRightOf="@id/imageView_casee"
            android:layout_marginLeft="5dp"
            android:text="Remarks"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/txt_btn_edit_schsing"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:text="Edit"
            android:tint="#3700B3" />

        <Button
            android:id="@+id/txt_btn_delete_schsing"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:text="Delete"
            android:tint="#3700B3" />

    </LinearLayout>

</androidx.cardview.widget.CardView>